@model CustomerManagement.Common.DTOs.CustomerDto

@{
ViewData["Title"] = "Delete Customer";
}

<h2>Delete Customer</h2>

<h3>Are you sure you want to delete this customer?</h3>

<div>
<h4>Customer Details:</h4>
<p>
     <strong>Name:</strong> @Model.FirstName @Model.LastName <br />
     <strong>Email:</strong> @Model.Email <br />
     <strong>Phone:</strong> @Model.Phone <br />
     <strong>Address:</strong> @Model.Address
</p>
</div>

<form asp-action="Delete" method="post">
<input type="hidden" name="id" value="@Model.CustomerId" />
<button type="submit" class="btn btn-danger">Delete</button>
<a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
